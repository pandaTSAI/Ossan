<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/fragment_myaccount_imgPersonal"
                                    android:layout_width="180dp"
                                    android:layout_height="90dp"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginTop="50dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/stark" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/fragment_myaccount_tvNickname"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginTop="70dp"
                                            android:text="東尼史塔克"
                                            android:textColor="@color/colorDark"
                                            android:textSize="24sp"
                                            android:textStyle="bold" />

                                </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/fragment_myaccount_btnName"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:text="查看並編輯個人資料"
                            android:textColor="@color/colorDarkGray"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/btSet"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="100dp"
                            android:background="@color/colorGray"
                            android:text="設定"

                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btOrder"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorGray"
                            android:text="訂單細節"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btIntro"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorGray"
                            android:text="自我介紹"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btOther"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorGray"
                            android:text="其他"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/btLogout"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorGray"
                            android:text="登出"
                            android:textSize="24sp" />
                </LinearLayout>
        </ScrollView>

</LinearLayout>