<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SingleProductFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/fragment_story_imageView"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_gravity="center|clip_vertical"
                android:src="@drawable/uncle_image_1" />

            <TextView
                android:id="@+id/fragment_story_tvname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:text="Asus PadFone 2"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/fragment_story_tvquote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="失"
                android:textColor="@color/com_facebook_button_background_color_selected"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/fragment_story_tvprice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:text="$300NT/HR"
                android:textColor="@android:color/holo_red_light"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/fragment_story_tv1"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fragment_story_btnshoppingcart"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorAccent"
                    android:text="加入購物車" />

                <Button
                    android:id="@+id/fragment_story_btnpay"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/holo_red_light"
                    android:text="立即結帳" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

